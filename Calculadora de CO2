{
  int r = 11.6;
  int l = 1308;
  int d = 6.5;
  int a = 589.9;
} pan;
struct fs
{
  int r = 3.64;
  int l = 392.4;
  int d = 2;
  int a = 184.8;
} fal;
struct zs
{
  int r = 5.74;
  int l = 8244.63;
  int d = 41.2;
  int a = 291.7;
} zap;

//muebles//

struct es
{
  int r = 18.14;
  int l = 30.653;
  int d = 153.3;
  int a = 921.1;
} est;
