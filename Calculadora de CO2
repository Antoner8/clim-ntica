{
  int r = 90.14;
  int l = 50.293;
  int d = 251.5;
  int a = 4579.39;
} sof;
struct ms6
{
  int r = 24.77;
  int l = 32.267;
  int d = 161.3;
  int a = 1258.39;
} mes;
